<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.3.5.1</Version>
    <!-- Nuget Tags -->
    <AssemblyTitle>Godot Sharp Extras</AssemblyTitle>
    <Description>A set of tools to allow easier interfacing with Godot.</Description>
    <PackageTags>godot</PackageTags>
    <Authors>Mario Steele</Authors>
    <RepositoryUrl>https://github.com/eumario/GodotSharpExtras</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/eumario/GodotSharpExtras</PackageProjectUrl>
    <Copyright>Copyright (c) 2021 Mario Steele</Copyright>
    <PackageReleaseNotes>Needs Godot 3.5.1 or later. For earlier versions, please use 0.3.1 or 0.2.3.</PackageReleaseNotes>
    <TargetFrameworks>net472;netstandard2.0;netstandard2.1</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="GodotSharp">
      <HintPath>$(ProjectDir)\.mono\assemblies\Debug\GodotSharp.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="GodotSharpEditor">
      <HintPath>$(ProjectDir)\.mono\assemblies\Debug\GodotSharpEditor.dll</HintPath>
      <Private>True</Private>
    </Reference>
  </ItemGroup>

</Project>
